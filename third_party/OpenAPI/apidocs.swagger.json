          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1CreateEmailPassIdentityRequest"
            }
          }
        ],
        "tags": [
          "UserService"
        ]
      }
    },
    "/v1/profile": {
      "get": {
        "summary": "Profile detail info.",
        "description": "Profile returns profile by profile_id.",
        "operationId": "UserService_Profile",
        "responses": {
